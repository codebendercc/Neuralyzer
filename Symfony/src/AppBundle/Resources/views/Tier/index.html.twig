{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- Custom CSS -->
    {% include 'AppBundle:Tier:css.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                {% for tier in tiers %}
                    <div class="col-sm-4">
                        <div class="panel price
                            {% if tier.id == 1 %}
                                panel-grey
                            {% elseif tier.id == 2 %}
                                panel-blue
                            {% elseif tier.id == 3 %}
                                panel-red
                            {% endif %}
                            ">
                            <div class="panel-heading  text-center">
                                <h3>{{ tier.tierName|upper }} PLAN</h3>
                            </div>
                            <div class="panel-body text-center">
                                <p class="lead" style="font-size:40px"><strong>${{ tier.price }} / month</strong></p>
                            </div>
                            <ul class="list-group list-group-flush text-center">
                                <li class="list-group-item"><i class="icon-ok text-danger"></i> {{ tier.tierName }} use
                                </li>
                                <li class="list-group-item"><i class="icon-ok text-danger"></i> Unlimited firmwares</li>
                                <li class="list-group-item"><i
                                            class="icon-ok text-danger"></i> {{ tier.successfulFlashCount }} flashes /
                                    month
                                </li>
                            </ul>
                            <div class="panel-footer">
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
